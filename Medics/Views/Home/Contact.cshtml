@{
    ViewBag.Title = "Contact";

}

<div class="container" style="margin-top:40px; display:block; ">
    <div class="col-md-5">
        <form method="post" style="background-color:#D2D5D9; display: block; padding: 9.5px; white-space: normal; color:#000000; padding-left: 75px; border:1px solid #000000; font-size:17px;">
            <div class="form-group">
                <label for="FormContactTextName">Name:</label>
                <input type="email" class="form-control" id="Contactname" name="Contactname" placeholder="Type your name here.">
            </div>
            <div class="form-group">
                <label for="FormContactTextLastName">Last Name:</label>
                <input type="email" class="form-control" id="Contactlastname" name="Contactlastname" placeholder="Type your last name here.">
            </div>
            <div class="form-group">
                <label for="FormContactEmail">Email Address:</label>
                <input type="email" class="form-control" id="Contactmail" name="Contactemail" placeholder="name@example.com">
            </div>
            <div class="form-group">
                <label for="FormContactSelect">Select one option:</label>
                <select class="form-control" id="Contactoption" name="Contactoption">
                    <option value="Optiongeneral">General Consultation</option>
                    <option value="Optionshift">Shift Consultation</option>
                    <option value="Optionpro">Consultation Professionals</option>
                </select>
            </div>
            <div class="form-group">
                <label for="FormContactTextArea">Type Here:</label>
                <textarea style="resize: none;" class="form-control" id="Contactmessage" name="Contactmessage" rows="3"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary" href="#" type="submit" role="button">Send</button>
            </div>
        </form>
    </div>
    <div class="col-md-7">
        <img class="featurette-image img-responsive center-block" data-src="holder.js/500x500/auto" alt="500x500" src="~/Images/Contact/ContactUs_1.png" style="margin-top:20px" data-holder-rendered="true">
    </div>
    <p><strong>You can also contact us by these means:</strong></p>
    <p>Phone: 0800-555-2525/2527</p>
    <p>Email: medicshospital@gmail.com</p>
</div>